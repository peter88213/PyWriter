<?xml version="1.0" encoding="UTF-8"?>
<project name="proofyw7" basedir=".">
	<property name="release" value="v1.00beta" />
	<property name="src" location="src" />
	<property name="build" location="build" />
	<property name="dist" location="dist" />
	<property name="project-name" value="${ant.project.name}" />
	<property name="release-name" value="${project-name}_${release}" />

	<target name="init">
		<!-- Create the time stamp -->
		<tstamp />
		<!-- Create the build directory -->
	<delete dir="${build}" />
		<mkdir dir="${build}" />
		<mkdir dir="${build}/${release-name}" />
	</target>

	<target name="prepare">
		<copy file="${src}/pywriter.py" todir="${build}/${release-name}" />
		<copy file="${src}/proofmd.py" todir="${build}/${release-name}" />
		<copy file="${src}/proofodt.py" todir="${build}/${release-name}" />
		<copy file="${src}/proofdocx.py" todir="${build}/${release-name}" />
		<copy file="${src}/proofhtml.py" todir="${build}/${release-name}" />
		<copy file="./LICENSE" todir="${build}/${release-name}" />
		<copy file="./README.md" todir="${build}/${release-name}" />
	</target>

<target name="dist" description="generate the distribution">
	<!-- Create the distribution directory -->
	<delete dir="${dist}" />
	<mkdir dir="${dist}" />

	<!-- Put all python files in ${src} into the MyProject-${DSTAMP}.zip file -->
	<zip destfile="${dist}/${release-name}.zip" basedir="${build}" />
</target>

<target name="clean" description="clean up">
	<!-- Delete the ${dist} and $build directory tree -->
	<delete dir="${dist}" />
	<delete dir="${build}" />
</target>

</project>